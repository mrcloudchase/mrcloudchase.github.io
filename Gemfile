source 'https://rubygems.org'

# Jekyll is the static site generator used for the website
gem 'jekyll', '~> 4.0'
# Minima is the theme used for the site
gem 'minima', '~> 2.0'
# Plugin to generate a sitemap for SEO
gem 'jekyll-sitemap', '~> 1.4'
# Webrick is used for local server support in Jekyll
gem 'webrick', '~> 1.7'